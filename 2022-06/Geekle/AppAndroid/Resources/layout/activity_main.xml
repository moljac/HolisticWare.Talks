<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"    
        android:rowCount="2"
        android:columnCount="2"
        >
    <Button
        android:text="@string/button_http_request_android"
        android:id="@+id/button_http_request_android" 
        />
    
    <Button
        android:text="@string/button_http_request_dotnet"
        android:id="@+id/button_http_request_dotnet" 
        />
    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_columnSpan="2" 
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_text"
            android:id="@+id/text_view_response"
            android:scrollbars = "vertical"
            />
    </ScrollView>

</GridLayout>
